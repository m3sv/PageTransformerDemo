<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/planet_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/planet_19_smaller" />

    <ImageView
        android:id="@+id/planet_11"

        android:layout_width="@dimen/small_planet_size"
        android:layout_height="@dimen/small_planet_size"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/planet_26"
        app:layout_constraintBottom_toBottomOf="@+id/planet_1"
        app:layout_constraintEnd_toEndOf="@+id/planet_1"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/planet_12"
        android:layout_width="80dp"
        android:layout_height="@dimen/small_planet_size"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/planet_26"
        app:layout_constraintBottom_toBottomOf="@+id/planet_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bkgd_6_small" />

</android.support.constraint.ConstraintLayout>